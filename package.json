{
    "name": "note-whiteboard",
    "displayName": "Note Whiteboard",
    "description": "A whiteboard canvas for visualizing and managing markdown files",
    "version": "1.0.0",
    "publisher": "panpan",
    "author": {
        "name": "Pan Pan"
    },
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/PRODUCTIVITYENHANCE/vscodecanva.git"
    },
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Visualization",
        "Other"
    ],
    "keywords": [
        "whiteboard",
        "canvas",
        "markdown",
        "notes",
        "blocks"
    ],
    "icon": "media/icon.png",
    "activationEvents": [
        "onCustomEditor:whiteboard.editor"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "whiteboard.open",
                "title": "Open Whiteboard",
                "category": "Whiteboard"
            },
            {
                "command": "whiteboard.openAsText",
                "title": "Open with Text Editor",
                "category": "Whiteboard"
            },
            {
                "command": "whiteboard.createNew",
                "title": "Create New Whiteboard",
                "category": "Whiteboard"
            },
            {
                "command": "whiteboard.sidebarTab1",
                "title": "Toggle Sidebar Tab 1 (Pinned)",
                "category": "Whiteboard"
            },
            {
                "command": "whiteboard.sidebarTab2",
                "title": "Toggle Sidebar Tab 2 (Cards)",
                "category": "Whiteboard"
            },
            {
                "command": "whiteboard.sidebarTab3",
                "title": "Toggle Sidebar Tab 3 (Stash)",
                "category": "Whiteboard"
            }
        ],
        "keybindings": [
            {
                "command": "whiteboard.sidebarTab1",
                "key": "cmd+shift+1",
                "when": "activeCustomEditorId == 'whiteboard.editor'"
            },
            {
                "command": "whiteboard.sidebarTab2",
                "key": "cmd+shift+2",
                "when": "activeCustomEditorId == 'whiteboard.editor'"
            },
            {
                "command": "whiteboard.sidebarTab3",
                "key": "cmd+shift+3",
                "when": "activeCustomEditorId == 'whiteboard.editor'"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "whiteboard.open",
                    "when": "true"
                },
                {
                    "command": "whiteboard.createNew",
                    "when": "true"
                }
            ],
            "explorer/context": [
                {
                    "command": "whiteboard.openAsText",
                    "when": "resourceExtname == .whiteboard.json || resourceFilename =~ /\\.whiteboard\\.json$/",
                    "group": "navigation"
                }
            ]
        },
        "customEditors": [
            {
                "viewType": "whiteboard.editor",
                "displayName": "Whiteboard Canvas",
                "selector": [
                    {
                        "filenamePattern": "*.whiteboard.json"
                    }
                ],
                "priority": "default"
            }
        ],
        "configuration": {
            "title": "Whiteboard Canvas",
            "properties": {
                "whiteboard.cardFolderPath": {
                    "type": "string",
                    "default": "",
                    "description": "Relative path from workspace root for storing new markdown card files. Leave empty to use workspace root."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./ && npm run build:webview",
        "build:webview": "node scripts/build-webview.js",
        "watch": "tsc -watch -p ./",
        "watch:webview": "node scripts/build-webview.js --watch",
        "package": "vsce package"
    },
    "devDependencies": {
        "@types/node": "^18.0.0",
        "@types/trusted-types": "^2.0.7",
        "@types/unist": "^3.0.3",
        "@types/vscode": "^1.74.0",
        "@vscode/vsce": "^2.22.0",
        "esbuild": "^0.27.1",
        "typescript": "^5.0.0"
    },
    "dependencies": {
        "@milkdown/kit": "^7.17.3",
        "@milkdown/theme-nord": "^7.17.3"
    }
}
