{
    "name": "whiteboard-canvas",
    "displayName": "Whiteboard Canvas",
    "description": "A whiteboard canvas for visualizing and managing markdown files",
    "version": "1.4.0",
    "publisher": "your-publisher-name",
    "repository": {
        "type": "git",
        "url": "https://github.com/your-username/whiteboard-canvas.git"
    },
    "engines": {
        "vscode": "^1.74.0"
    },
    "categories": [
        "Visualization",
        "Other"
    ],
    "keywords": [
        "whiteboard",
        "canvas",
        "markdown",
        "notes",
        "blocks"
    ],
    "icon": "media/icon.png",
    "activationEvents": [
        "onCustomEditor:whiteboard.editor"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "whiteboard.open",
                "title": "Open Whiteboard",
                "category": "Whiteboard"
            },
            {
                "command": "whiteboard.openAsText",
                "title": "Open with Text Editor",
                "category": "Whiteboard"
            },
            {
                "command": "whiteboard.createNew",
                "title": "Create New Whiteboard",
                "category": "Whiteboard"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "whiteboard.open",
                    "when": "true"
                },
                {
                    "command": "whiteboard.createNew",
                    "when": "true"
                }
            ],
            "explorer/context": [
                {
                    "command": "whiteboard.openAsText",
                    "when": "resourceExtname == .whiteboard.json || resourceFilename =~ /\\.whiteboard\\.json$/",
                    "group": "navigation"
                }
            ]
        },
        "customEditors": [
            {
                "viewType": "whiteboard.editor",
                "displayName": "Whiteboard Canvas",
                "selector": [
                    {
                        "filenamePattern": "*.whiteboard.json"
                    }
                ],
                "priority": "default"
            }
        ],
        "configuration": {
            "title": "Whiteboard Canvas",
            "properties": {
                "whiteboard.cardFolderPath": {
                    "type": "string",
                    "default": "",
                    "description": "Relative path from workspace root for storing new markdown card files. Leave empty to use workspace root."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "package": "vsce package"
    },
    "devDependencies": {
        "@types/node": "^18.0.0",
        "@types/vscode": "^1.74.0",
        "typescript": "^5.0.0",
        "@vscode/vsce": "^2.22.0"
    }
}